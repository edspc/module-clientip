<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Edspc_ClientIP::css/client_ip.css"/>
    </head>
    <body>
        <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Template" name="header.client_ip" template="Edspc_ClientIP::client_ip.phtml" after="customer">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="clientIpAddress" xsi:type="array">
                                <item name="component" xsi:type="string">Edspc_ClientIP/js/client-ip-addr</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
